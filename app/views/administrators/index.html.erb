<h1>Administrators</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @administrators.each do |administrator| %>
      <tr>
        <td><%= administrator.name %></td>
        <td><%= link_to administrator.username, administrator_path(administrator) %></td>
        <td><%= administrator.created_at.to_formatted_s(:long)  %></td>
        <td>
          <%= link_to 'Edit', edit_administrator_path(administrator), :class => 'btn btn-mini' %>
          <%= link_to 'Delete', administrator_path(administrator), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_administrator_path, :class => 'btn btn-primary' %>
