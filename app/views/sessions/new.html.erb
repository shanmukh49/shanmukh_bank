<% provide(:title, "Customer Sign in") %>
<h1>Customer Sign in</h1>

<div class="row">
  <div class="span3 offset4">
    <%= form_for(:session, :url => sessions_path) do |f| %>
    <%#= form_for(:customer, :url => customers_path) do |c| %>
    <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
      
      <div class="btn btn-large btn-primary">
      	<%= link_to "Sign Up", controller: "customers", action: "new", :class => "btn btn-large btn-primary" %>
      </div>
      <%#= c.submit "Sign Up", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
