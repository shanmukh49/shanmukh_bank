<% provide(:title, "Update Customer Profile") %>
<h1>Update Customer Profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for @customer, :url => update_profile_path, :html => { :class => 'form-horizontal' } do |f| %>
      <fieldset>
        <legend>Your Profile</legend>

        <%= f.hidden_field :id, :value => current_customer.id %>
        <%= f.input :name %>
        <%= f.input :username %>
        <%= f.input :account_balance %>
        <%= f.input :password %>
        <%= f.input :password_confirmation, :label => "Confirm Password" %>

        <div class="form-actions">
          <%= f.submit nil, :class => 'btn btn-primary' %>
          <%= link_to 'Cancel', view_profile_path, :class => 'btn' %>
        </div>
      </fieldset>
    <% end %>

  </div>
</div>
