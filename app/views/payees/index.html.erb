<h1>Payees</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @payees.each do |payee| %>
      <tr>
        <td><%= payee.id %></td>
        <td><%= link_to payee.name, payee_path(payee) %></td>
        <td><%= payee.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_payee_path(payee), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', payee_path(payee), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_payee_path, :class => 'btn btn-primary' %>
